<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>


    <style name="AAA_ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:checkboxStyle">@color/colorAccent</item>

    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat.Button">
        <item name="colorButtonNormal">@color/loginCuttonColor</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="panelBackground">@color/transparent</item>
    </style>

    <style name="custom_dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="panelBackground">@color/white</item>
        <item name="dialogCornerRadius">25dp</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
