<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.medparliament.Widget.Segow_UI_Bold_Font
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text2"
            android:text="1 weak ago"/>
        
        <ImageView
            android:id="@+id/pic_img"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:scaleType="fitXY"
            android:layout_marginTop="11dp"
            android:src="@drawable/doctor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="12.8dp"
                android:layout_height="12dp"
                android:layout_marginLeft="18.4dp"
                android:src="@drawable/ic_like"/>

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="3dp"
                android:text="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/dics_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="29dp">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingLeft="36dp"
        android:elevation="5dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:layout_height="wrap_content">

        <com.medparliament.Widget.Segow_UI_EditText
            android:id="@+id/add_view"
            android:background="@color/white"
            android:layout_width="309dp"
            android:layout_height="wrap_content" />

        <com.medparliament.Widget.Segow_UI_Bold_Font
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            >
        </com.medparliament.Widget.Segow_UI_Bold_Font>
    </LinearLayout>
</RelativeLayout>