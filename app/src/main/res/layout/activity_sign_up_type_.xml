<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUp_type_Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg1"
        android:scaleType="centerCrop">
    </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/top"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <ImageButton
                    android:id="@+id/bck"
                    android:layout_width="60dp"
                    android:padding="15dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_back"></ImageButton>
                <com.example.medparliament.Widget.Segow_UI_Semi_Font
                    android:layout_toRightOf="@+id/bck"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:layout_marginLeft="20dp"
                    android:lineHeight="17dp"
                    android:text="@string/Signup"
                    >
                </com.example.medparliament.Widget.Segow_UI_Semi_Font>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/top"
                android:layout_height="wrap_content">
                <com.example.medparliament.Widget.Segow_UI_Semi_Font
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/selectType"
                    android:textAlignment="gravity"
                    android:textSize="16dp"
                    android:textColor="@color/textcolor"
                    android:gravity="left"
                    android:paddingLeft="@dimen/fieldHeight">
                </com.example.medparliament.Widget.Segow_UI_Semi_Font>
                <com.example.medparliament.Widget.Segow_UI_Semi_Font
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ttt"
                    android:textAlignment="gravity"
                    android:textSize="16dp"
                    android:paddingRight="100dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:paddingLeft="@dimen/fieldHeight">
                </com.example.medparliament.Widget.Segow_UI_Semi_Font>
            </LinearLayout>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:weightSum="3">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/student"
            android:layout_marginRight="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/radius">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <com.example.medparliament.Widget.Segow_UI_Font
                    android:layout_weight="1.5"
                    android:textColor="@color/white"
                    android:text="@string/Students"
                    android:background="@color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.medparliament.Widget.Segow_UI_Font>
                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_study"
                    android:padding="8dp"
                    android:layout_height="match_parent">
                </ImageView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/enterPr"
            app:cardBackgroundColor="@color/transparent"
            android:layout_marginLeft="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/radius">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:src="@drawable/entre"
                    android:padding="8dp"

                    android:layout_height="match_parent">
                </ImageView>
                <com.example.medparliament.Widget.Segow_UI_Font
                    android:layout_weight="1.5"
                    android:textColor="@color/white"
                    android:text="@string/Entrepreneur"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.medparliament.Widget.Segow_UI_Font>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/policyMaker"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/radius">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <com.example.medparliament.Widget.Segow_UI_Font
                    android:layout_weight="1.5"
                    android:textColor="@color/white"
                    android:text="@string/Policy_Maker"
                    android:background="@color/transparent"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.example.medparliament.Widget.Segow_UI_Font>
                <ImageView
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_contract"
                    android:padding="8dp"

                    android:layout_height="match_parent">
                </ImageView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>