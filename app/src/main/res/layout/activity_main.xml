<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/spashbgbg"
        android:scaleType="centerCrop">
    </ImageView>
    <ImageView
        android:layout_width="192dp"
        android:src="@drawable/ic_logo_new"
        android:scaleType="centerInside"
        android:id="@+id/img1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="160dp">
    </ImageView>
    <com.medparliament.Widget.Segow_UI_Bold_Font
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/t1"
        android:layout_below="@id/img1"
        android:paddingLeft="0dp"
        android:textAlignment="center"
        android:text="@string/MED_PARLIAMENT"
        android:layout_height="wrap_content">
    </com.medparliament.Widget.Segow_UI_Bold_Font>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/t1"
        android:layout_above="@id/bottom"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
      >

      <FrameLayout
          android:layout_centerInParent="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <VideoView
              android:id="@+id/scalableVideoView"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_centerInParent="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />

          <com.medparliament.Widget.Segow_UI_Semi_Font
              android:id="@+id/skip"
              android:layout_width="100dp"
              android:layout_height="25dp"
              android:layout_marginBottom="10dp"
              android:background="@drawable/transparent"
             android:layout_gravity="bottom|right"
              android:gravity="center_vertical|center_horizontal"
              android:text="@string/skip"
              android:textColor="@color/white"
              android:textSize="14dp"></com.medparliament.Widget.Segow_UI_Semi_Font>
      </FrameLayout>



    </RelativeLayout>

